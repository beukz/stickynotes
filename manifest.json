{
  "manifest_version": 3,
  "name": "Sticky Notes",
  "description": "Add sticky notes to any website, save them, and view them anytime!",
  "version": "0.8",
  "icons": {
    "128": "assets/pin.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/pin.png"
  },
  "commands": {
    "open-notes-page": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Open the My Notes page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pages/installed.html",
        "pages/migrate.html",
        "pages/account.html",
        "pages/auth-callback.html",
        "pages/notes.html",
        "assets/bold.svg",
        "assets/italic.svg",
        "assets/underline.svg",
        "assets/strikethrough.svg",
        "canx-sdk.v1.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}